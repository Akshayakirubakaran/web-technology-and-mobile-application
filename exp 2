        <input type="password" id="password">

        <label>E-mail</label>
        <input type="text" id="email">

        <label>Mobile Number</label>
        <input type="text" id="mobile">

        <label>Address</label>
        <textarea id="address" rows="3"></textarea>

        <button type="submit">Submit</button>

    </form>
